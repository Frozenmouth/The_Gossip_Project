<div class="container">
<h1>Bienvenue sur mon site The Gossip Project !</h1>
<p>Les potins les plus récents :</p>
  <div class="card-deck">
    <% Gossip.all.each_with_index do |gossip, index|%>
    <div class="col-3">
      <div class="card mb-4">
        <div class="card-body">
          <h3 class="card-title">Potin n° <%= gossip.id %></h3>
          <h6 class="card-subtitle mb-2 text-muted"><%= gossip.title %></h6>
          <p class="card-text"><%= gossip.content[0..50] %>...</p>
          <%=  link_to "Voir plus", gossip_path(gossip.id), :class => "card-link" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>